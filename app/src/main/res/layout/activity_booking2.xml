<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking2"
    android:background="@drawable/sr">

    <TextView
        android:id="@+id/Vie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Details"
        android:textColor="#040202"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />


    <EditText
        android:id="@+id/ex1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mmmm"
        android:hint="Enter the name of equipment ..."
        android:inputType="text"
        android:textColor="#040202"
        android:textSize="20dp"
        android:drawableLeft="@drawable/baseline_construction_24"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/ttb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mmmm"
        android:hint="Enter your Name..."
        android:inputType="text"
        android:textColor="#040202"
        android:textSize="20dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mmmm"
        android:hint="Enter Your Email...."
        android:inputType="textEmailAddress"
        android:textColor="#040202"
        android:textSize="20dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.477"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/sit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mmmm"
        android:hint="Enter the date..."
        android:inputType="date"
        android:textColor="#040202"
        android:textSize="20dp"
        android:drawableLeft="@drawable/baseline_date_range_24"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/Phon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/mmmm"
        android:hint="Enter the Phone number..."
        android:inputType="date"
        android:textColor="#040202"
        android:textSize="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Confirm"
        android:textSize="16dp"
        android:background="@drawable/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838" />






</androidx.constraintlayout.widget.ConstraintLayout>